{
  "name": "course-notes-compiler",
  "type": "module",
  "version": "1.0.0",
  "main": "dist/compile.js",
  "scripts": {
    "_build": "npm run clean && npm run create:dirs && npm run build:sass && npm run build:ts && node dist/compile_all.js",
    "clean": "rm -rf output && rm -rf dist rm -rf deploy/add.files && rm -rf deploy/remove.files",
    "_create:dirs": "mkdir -p output/assets/css output/assets/scripts",
    "build:sass": "sass scss/main.scss:output/assets/css/styles.css --style compressed --no-source-map",
    "build:sass:dev": "rm -rf output/assets/css && sass scss/main.scss:output/assets/css/styles.css --watch",
    "build:ts": "tsc --project tsconfig.json",
    "quicktest": "node --loader ts-node/esm src/test.ts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.10",
    "gh-pages": "^6.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@mpjovanovich/dotmark": "^1.0.1",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "fs-extra": "^11.2.0",
    "sass": "^1.83.4"
  }
}
